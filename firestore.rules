rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Trials collection - publicly readable, admin write only
    match /trials/{trialId} {
      allow read: if true;
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
      
      // Validate user document structure
      function validUserData() {
        let data = request.resource.data;
        return data.keys().hasAll(['email', 'createdAt'])
          && data.email is string
          && data.email.size() > 0;
      }
    }
    
    // Alerts collection - users can manage their own alerts
    match /alerts/{alertId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Search history - users can read their own searches
    match /searchHistory/{searchId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Trial sync metadata - readable by all, writable only by admin/functions
    match /metadata/{docId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
